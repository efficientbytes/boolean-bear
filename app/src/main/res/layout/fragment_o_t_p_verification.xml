<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarSize="0dp"
        tools:ignore="ContentDescription"
        tools:context=".ui.fragments.OTPVerificationFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="38dp">

            <ImageView
                android:id="@+id/appLogoImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="34dp"
                android:src="@drawable/racoon_outline"
                app:layout_constraintBottom_toBottomOf="@id/guideline2"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/pleaseEnterVerificationCodeLabelTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="36dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/please_enter_the_verification_code_sent_to_your_phone_number"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/appLogoImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/appLogoImageView"
                app:layout_constraintTop_toTopOf="@id/appLogoImageView">

            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/otpSentToLabelTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/montserrat"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/otpPinViewLayout"
                app:layout_constraintStart_toStartOf="@id/otpPinViewLayout"
                app:layout_constraintTop_toBottomOf="@id/guideline2"
                tools:text="OTP sent to +919150472796">

            </com.google.android.material.textview.MaterialTextView>

            <in.aabhasjindal.otptextview.OtpTextView
                android:id="@+id/otpPinViewLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                app:bar_enabled="false"
                app:bar_height="2dp"
                app:bar_inactive_color="@color/white"
                app:height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/otpSentToLabelTextView"
                app:length="6"
                app:otp_box_background="@drawable/otp_cell_background"
                app:otp_text_size="24dp"
                app:width="40dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/otpErrorValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                app:fontFamily="@font/montserrat"
                android:text="Incorrect OTP"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="@color/md_theme_error"
                app:layout_constraintStart_toStartOf="@id/otpPinViewLayout"
                app:layout_constraintTop_toBottomOf="@id/otpPinViewLayout" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/didNotReceiveLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/didn_t_receive"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/otpPinViewLayout"
                app:layout_constraintTop_toBottomOf="@id/barrier1">

            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/resendOTPLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="4dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/montserrat_medium"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="@string/resend_otp"
                android:textColor="@color/violet_100"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/otpPinViewLayout"
                app:layout_constraintTop_toBottomOf="@id/barrier1">

            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/verifyButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/verify"
                android:textColor="@color/black"
                app:cornerRadius="4dp"
                android:enabled="false"
                app:layout_constraintEnd_toEndOf="@id/otpPinViewLayout"
                app:layout_constraintStart_toStartOf="@id/otpPinViewLayout"
                app:layout_constraintTop_toBottomOf="@id/didNotReceiveLabelTextView">

            </com.google.android.material.button.MaterialButton>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="397dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="1" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="otpErrorValueTextView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>