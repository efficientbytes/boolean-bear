<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".ui.fragments.BrandDisplayFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/onlyLogoConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/app_logo_type_no_shape_no_name_no_black_background_svg_format"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/onlyNameConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_alternates_semibold"
                android:text="@string/app_name_styled"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="60sp"
                app:autoSizeMaxTextSize="60sp"
                app:autoSizeMinTextSize="40sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </com.google.android.material.textview.MaterialTextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/logoNNameConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/app_logo_type_no_shape_no_name_no_black_background_svg_format"
                app:layout_constraintBottom_toBottomOf="@id/nameTextViewLabel"
                app:layout_constraintEnd_toStartOf="@id/nameTextViewLabel"
                app:layout_constraintTop_toTopOf="@id/nameTextViewLabel" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/nameTextViewLabel"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginStart="64dp"
                android:fontFamily="@font/montserrat_alternates_semibold"
                android:gravity="center"
                android:text="@string/app_name_styled"
                android:textColor="@color/white"
                android:textSize="48sp"
                app:autoSizeMaxTextSize="48sp"
                app:autoSizeMinTextSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </com.google.android.material.textview.MaterialTextView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>