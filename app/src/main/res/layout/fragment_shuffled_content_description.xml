<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corner_top_radius_layout_background"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="24dp"
        tools:context=".ui.fragments.ShuffledContentDescriptionFragment">

        <View
            android:id="@+id/bottomSheetPullBarView"
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/contentDescriptionLabelTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Description"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:fontFamily="@font/montserrat_medium">

        </com.google.android.material.textview.MaterialTextView>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:scrollbarSize="0dp"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/contentTitleValueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Lorem ipsum dolor sit amet,at cupidatat non proident, ] qui officia deserunt mollit at laborum."
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:fontFamily="@font/montserrat_medium">

                </com.google.android.material.textview.MaterialTextView>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmerTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/black_400">

                    </View>

                </com.facebook.shimmer.ShimmerFrameLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/instructorCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/black_600"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/instructorParentConstraintLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/instructorProfilePicImage"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearanceOverlay="@style/CompletelyRounded"
                            tools:src="@tools:sample/backgrounds/scenic[25]">

                        </com.google.android.material.imageview.ShapeableImageView>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/instructorNameValueTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Anubhav.P.S"
                            android:textSize="14sp"
                            app:fontFamily="@font/montserrat"
                            app:layout_constraintBottom_toBottomOf="@id/instructorProfilePicImage"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/instructorProfilePicImage"
                            app:layout_constraintTop_toTopOf="@id/instructorProfilePicImage">

                        </com.google.android.material.textview.MaterialTextView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmerInstructor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:background="@color/black_400">

                    </View>

                </com.facebook.shimmer.ShimmerFrameLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/contentDescriptionValueTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:fontFamily="@font/montserrat">

                </com.google.android.material.textview.MaterialTextView>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmerDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/black_400">

                    </View>

                </com.facebook.shimmer.ShimmerFrameLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mentionedLinksLabelTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Mentioned Links"
                    android:textColor="@color/white"
                    app:fontFamily="@font/montserrat_medium" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mentionedLinksRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="4dp"
                    android:visibility="gone"
                    tools:itemCount="4"
                    tools:listitem="@layout/recycler_view_item_mentioned_link_view">

                </androidx.recyclerview.widget.RecyclerView>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmerMentionedLinks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/black_400">

                    </View>

                </com.facebook.shimmer.ShimmerFrameLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/hashTagsLabelTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Hash tags"
                    android:textColor="@color/white"
                    app:fontFamily="@font/montserrat_medium" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/hashtagsChipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    app:chipSpacingVertical="0dp">

                </com.google.android.material.chip.ChipGroup>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmerHashtags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="@color/black_400">

                    </View>

                </com.facebook.shimmer.ShimmerFrameLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>