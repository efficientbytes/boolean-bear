<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/courseCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/md_theme_background"
        app:cardCornerRadius="0dp"
        app:strokeWidth="0dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="12dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/thumbnailImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/black_800"
                android:scaleType="fitXY"
                app:layout_constraintDimensionRatio="17:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </com.google.android.material.imageview.ShapeableImageView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/titleTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/black_800"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:fontFamily="@font/montserrat_medium"
                app:layout_constraintEnd_toEndOf="@id/thumbnailImage"
                app:layout_constraintStart_toStartOf="@id/thumbnailImage"
                app:layout_constraintTop_toBottomOf="@id/thumbnailImage">

            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/instructorNameTxt"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/black_800"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:fontFamily="@font/montserrat"
                app:layout_constraintStart_toStartOf="@id/titleTxt"
                app:layout_constraintTop_toBottomOf="@id/titleTxt">

            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/uploadedOn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/black_800"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:fontFamily="@font/montserrat"
                app:layout_constraintBottom_toBottomOf="@id/instructorNameTxt"
                app:layout_constraintEnd_toEndOf="@id/titleTxt"
                app:layout_constraintTop_toTopOf="@id/instructorNameTxt">

            </com.google.android.material.textview.MaterialTextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>